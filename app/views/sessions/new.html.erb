
<div>
  <%=  form_tag( 'login',:class => 'form-horizontal')  do%>

 
    <legend>Proszę się zalogować</legend>
    <div class="control-group user_fields">
      <label for="login" class='control-label' >Login:</label>
      <div class="controls">
      <%= text_field_tag :login,params[:login] , :class => 'input-large'%>
        </div>
    </div>
   <div class="control-group user_fields">
      <label for="password"  class='control-label' >Hasło:</label>
      <div class="controls">
      <%= password_field_tag :password,params[:password] , :class => 'input-large'%>
      </div>
    </div>
    <div>
      <%= button_tag 'Zaloguj' ,{:class=>"btn btn-success"}%>
    </div>



  <%end%>
</div>
