<%article=article_short%>
<article class="art">
  <header>
    <h1>
      <%= link_to "#{article.title}",article_path(article)%>
    </h1>
    <h5><%= article.updated_at.strftime("%Y-%m-%d") %></h5>
    
  </header>
  <section>
    <%if article.image%>
    <div class="image">
     <%= image_tag article.image.avatar.url(:thumb) %>
    </div>
    <%end%>
     <%if article.short.nil? or article.short==""%>
        <%=raw article.tresc_prep%>
    <%else%>
        <%= raw article.short %>
    <%end%>

    
    <div class="clear"></div>
  </section>
  <%if admin_or_dziekan%>
  <br />
  <%= link_to 'Edit', edit_article_path(article),:class=>"btn btn-success" %>
  <%end%>
</article>
<div class="right">
  <%= link_to "czytaj całość >>", article_path(article)%>
</div>