<%= form_for(@user, :html=>{:class => 'form-horizontal'}) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="control-group user_fields">
    <%= f.label :name,"Imię i nazwisko" , :class=>'control-label'%>
   <div class="controls">
    <%= f.text_field :name %>
   </div>
  </div>
  <div class="control-group user_fields">
    <%= f.label :title,"Tytuł" , :class=>'control-label'%>
     <div class="controls">
    <%= f.text_field :title %>
     </div>
  </div>


<div class="control-group user_fields">
    <%= f.label :login ,"Login", :class=>'control-label'%>
   <div class="controls">
    <%= f.text_field :login,:size=>40 %>
   </div>
  </div>
  
<div class="control-group user_fields">
    <%= f.label :password,'Hasło', :class=>'control-label' %>
   <div class="controls">
    <%= f.password_field :password,:size=>40 %>
   </div>
  </div>
<div class="control-group user_fields">
    <%= f.label :password_confirmation,'Potwierdzenie hasła', :class=>'control-label' %>
   <div class="controls">
    <%= f.password_field :password_confirmation,:size=>40 %>
   </div>
  </div>

<div class="control-group user_fields">
  <%= f.label :functions,'Role w systemie:', :class=>'control-label' %>
   <div class="controls">
  <%= select_tag("functions[]", options_for_select(Role.roles_for_select, @user.roles.collect{ |f| f.id }),
                   {:multiple=>true, :id => "functions"}) %>
   </div>
</div>

  <div class="actions">
    <%= f.button 'Zapisz',:class=>"btn btn-success"%>
  </div>
<% end %>
